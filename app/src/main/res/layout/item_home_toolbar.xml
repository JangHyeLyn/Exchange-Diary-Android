<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교환일기"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/iv_profile_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_nav_profile"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/iv_alarm_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_nav_alarm"
            android:layout_toStartOf="@id/iv_profile_button"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/iv_add_diary_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_nav_add"
            android:layout_toStartOf="@id/iv_alarm_button"
            android:layout_marginEnd="10dp"/>

</RelativeLayout>